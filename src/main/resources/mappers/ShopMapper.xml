	<!-- 상품 추가 -->
	<insert id="insertItem" parameterType="shop">
		INSERT INTO shop_items 
		values(#{item_name}, #{item_remain}, #{item_total}, #{item_per}, #{item_point}, #{item_file})
	</insert>
	
